# Copy this file to /etc/tingo/tingoaipayment.env (or your deployment env file)
# and set actual secret values. Do NOT commit real secrets.

ASPNETCORE_ENVIRONMENT=Production
# Enable Swagger UI in Production for debugging (true/false)
EnableSwaggerInProduction=true

# Database
ConnectionStrings__DefaultConnection=Host=paymentgaterecords.c7e2gg6q461a.us-east-2.rds.amazonaws.com;Port=5432;Database=paymentgaterecords;Username=TingoPayment;Password=REPLACE_WITH_SECRET;SslMode=Require;Trust Server Certificate=true

# Basic auth for Payment/Transaction endpoints
PaymentBasicAuth__Username=TingoAIPaymentGateway
PaymentBasicAuth__Password=REPLACE_WITH_SECRET

# GlobalPay external service
GlobalPay__PublicKey=REPLACE_WITH_PUBLIC_KEY
GlobalPay__SecretKey=REPLACE_WITH_SECRET_KEY
GlobalPay__BaseUrl=https://paygw.globalpay.com.ng/globalpay-paymentgateway/api/paymentgateway

# Redis
Redis__ConnectionString=localhost:6379

# Rate limiting
RateLimit__RequestsPerMinute=100
RateLimit__EnableRateLimiting=true

# Region settings (optional)
Region__CurrentRegion=NG
Region__AvailableRegions=UK,US,NG
